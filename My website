  <script>
    // Lightweight client-side behavior — no external deps so it works on free hosts
    (function(){
      const term = document.getElementById('terminal');
      const tline = document.getElementById('tline');
      const note = document.getElementById('author-note');
      const frag = document.getElementById('fragflash');

      // Small simulated terminal output to add atmosphere
      const lines = [
        'RECORD: RECOVERED PACK v1.4',
        'SCANNING... 42% [█████-----]',
        'INTEGRITY: PARTIAL',
        'LINK FRAGMENTS PRESENT',
        'USER: UNKNOWNPLAYER',
        'RECOMMENDATION: DO NOT ATTEMPT REMOVAL'
      ];

      let i=0;
      function drip(){
        if(i<lines.length){
          const el = document.createElement('div');
          el.textContent = lines[i++];
          term.appendChild(el);
          term.scrollTop = term.scrollHeight;
          setTimeout(drip, 900);
        } else {
          // reveal a subtle author note that looks corrupted
          note.textContent = '— author: j.d. (unsigned) —';
          // show the brief flash again when terminal finishes
          frag.classList.remove('flash-brief');
          void frag.offsetWidth; // restart animation
          frag.classList.add('flash-brief');
        }
      }
      setTimeout(drip, 800);

      // fake delete action
      document.getElementById('delete-btn').addEventListener('click', function(){
        document.getElementById('delete-result').style.display = 'block';
        // additional fake behavior: add an obfuscated comment to the DOM (visible in inspector)
        const c = document.createElement('div');
        c.style.display='none';
        c.textContent = 'ACCESS_DENIED';
        c.id = 'deny-'+Date.now();
        document.body.appendChild(c);
      });

      // tiny easter: clicking terminal reveals a hidden fragment panel (for players)
      term.addEventListener('click', function(){
        const hc = document.getElementById('hidden-clues');
        if(hc.style.display === 'block'){
          hc.style.display='none';
          alert('Hidden clues re-hidden');
        } else {
          hc.style.display='block';
          alert('Hidden clues revealed — check page source for more.');
        }
      });

      // quick protection: disable clipboard copying of terminal (adds atmosphere)
      term.addEventListener('copy', function(e){
        e.preventDefault();
        alert('COPY DISABLED: Fragment integrity protected.');
      });

    })();
  </script>
